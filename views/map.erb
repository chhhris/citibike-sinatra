<h1>My bike route.</h1>
<h3><i>As the crow flies.</i></h3>

<ul>
    <li> Start: <%= @start %> </li>
    <li> End: <%= @end %> </li>
</ul>

<div id="map"></div>
<script type="text/javascript" charset="utf-8">

  var map = L.map('map').setView([40.730473, -73.986723], 13);
  L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {
    attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors'
  }).addTo(map);

  L.polygon([
    [<%=@start.split(",")[0].to_f/1000000%>, <%=@start.split(",")[1].to_f/1000000%>],
    [<%=@end.split(",")[0].to_f/1000000%>, <%=@end.split(",")[1].to_f/1000000%>]
  ]).addTo(map).bindPopup("<b>Bike route.</b><br>As the crow flies.").openPopup();

</script>